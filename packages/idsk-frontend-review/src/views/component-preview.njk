{% extends "layouts/" + previewLayout | default('layout') + ".njk" %}

{% set htmlLang = 'sk' %}
{% set templateTitle = ("Default " + componentName if exampleName == "default" else componentName + " " + componentFixture.name) | unslugify %}

{% block pageTitle %}{{ templateTitle }} - ID-SK Frontend{% endblock %}

{# Remove standard template banners/headers/frontmatter #}
{% block skipLink %}{% endblock %}
{% block bodyStart %} {% endblock %}
{% block header %}{% endblock %}

{% block content %}
  <div class="app-whitespace-highlight">
    {{ componentView | safe }}
  </div>
{% endblock %}

{% block scripts %}
  <script type="module" src="/javascripts/component-preview-iframe.bundle.min.mjs"></script>
{% endblock %}
